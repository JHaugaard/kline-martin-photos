# Kline-Martin Photos - Environment Variables
# Copy this file to .env.local and fill in your values

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase project URL (public)
NEXT_PUBLIC_SUPABASE_URL=https://supabase.haugaard.dev

# Supabase anonymous key (public, safe for browser)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (secret, server-side only)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Direct PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:your-password@72.60.27.146:5432/kline_martin_photos

# =============================================================================
# BACKBLAZE B2 STORAGE
# =============================================================================

# B2 Application Key ID
B2_APPLICATION_KEY_ID=your-key-id-here

# B2 Application Key (secret)
B2_APPLICATION_KEY=your-application-key-here

# B2 Bucket Name
B2_BUCKET_NAME=kline-martin-photos

# B2 S3-compatible endpoint
B2_ENDPOINT=https://s3.us-west-004.backblazeb2.com

# =============================================================================
# EMBEDDING SERVICES
# =============================================================================

# Python embedding service URL (SigLIP for image embeddings)
EMBEDDING_SERVICE_URL=http://localhost:8001

# Ollama URL for text embeddings
OLLAMA_BASE_URL=https://ollama.haugaard.dev

# Ollama model for text embeddings
OLLAMA_EMBED_MODEL=nomic-embed-text

# =============================================================================
# NEXT.JS / AUTH
# =============================================================================

# NextAuth secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-here

# Application URL (production: https://kline-martin-photos.com)
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# LOCAL DEVELOPMENT OVERRIDES
# =============================================================================

# Uncomment these for local development with Docker Compose

# Use local PostgreSQL instead of Supabase
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/kline_martin_photos

# Use local embedding service
# EMBEDDING_SERVICE_URL=http://localhost:8001
